{
  extends: [
    'github>camptocamp/gs-renovate-config-preset:base.json5#0.8.2',
    'github>camptocamp/gs-renovate-config-preset:group.json5#0.8.5',
    'github>camptocamp/gs-renovate-config-preset:ci.json5#0.8.2',
    'github>camptocamp/gs-renovate-config-preset:pre-commit.json5#0.8.2',
    'github>camptocamp/gs-renovate-config-preset:python.json5#0.8.2',
    'github>camptocamp/gs-renovate-config-preset:json-schema.json5#0.8.2',
    'github>camptocamp/gs-renovate-config-preset:shellcheck.json5#0.8.2',
    'github>camptocamp/gs-renovate-config-preset:preset.json5#0.8.5',
    'github>camptocamp/gs-renovate-config-preset:security.json5#0.8.2',
    'github>camptocamp/gs-renovate-config-preset:own.json5#0.8.2',
  ],
  customManagers: [
    {
      fileMatch: ['.*/.env$'],
      matchStrings: ['_TAG=(?<currentValue>[^\\s]+) +# (?<depName>[^\\s]+)'],
      datasourceTemplate: 'docker',
      customType: 'regex',
    },
  ],
  packageRules: [
    /** Automerge the patch, the minor and the dev dependency */
    {
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
    },
    /** Group the patch and the minor */
    {
      matchUpdateTypes: ['minor', 'patch'],
      groupName: 'all patch versions',
    },
    {
      matchUpdateTypes: ['minor'],
      minimumReleaseAge: '14 days',
    },
    {
      matchUpdateTypes: ['major'],
      minimumReleaseAge: '3 months',
    },
    {
      groupName: 'paperless',
      schedule: 'at any time',
      matchDepNames: ['ghcr.io/paperless-ngx/paperless-ngx'],
    },
    {
      matchUpdateTypes: ['patch'],
      groupName: 'patch paperless',
      matchDepNames: ['ghcr.io/paperless-ngx/paperless-ngx'],
    },
  ],
}
